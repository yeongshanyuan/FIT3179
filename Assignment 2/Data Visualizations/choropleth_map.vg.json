{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 500,
  "title": "Proportion of New Donors in Total Blood Donations, Malaysia",
  "params": [
    {
      "name": "Year",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 2010,
        "max": 2024,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "projection": {
    "type": "mercator",
    "center": [
      110,
      4
    ],
    "scale": 2600
  },
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "fill": "#c5e3ff"
      },
      "data": {
        "sphere": true
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/yeongshanyuan/FIT3179/refs/heads/main/Assignment%202/Cleaned%20Datasets/Malaysia%20States%20Map.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_0_countries"
        }
      },
      "transform": [
        {
          "calculate": "datum.properties.ADMIN == 'Malaysia' ? 'Malaysia' : 'Other'",
          "as": "country_type"
        }
      ],
      "mark": {
        "type": "geoshape"
      },
      "encoding": {
        "color": {
          "field": "country_type",
          "type": "nominal",
          "scale": {
            "domain": [
              "Malaysia",
              "Other"
            ],
            "range": [
              "#ffffff",
              "#d9d9d9"
            ]
          },
          "legend": null
        },
        "stroke": {
          "value": "lightgray"
        },
        "strokeWidth": {
          "value": 0.5
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/yeongshanyuan/FIT3179/refs/heads/main/Assignment%202/Cleaned%20Datasets/Malaysia%20States%20Map.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_10"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgray",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/yeongshanyuan/FIT3179/refs/heads/main/Assignment%202/Cleaned%20Datasets/Malaysia%20States%20Map.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgray",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/yeongshanyuan/FIT3179/refs/heads/main/Assignment%202/Cleaned%20Datasets/New%20Donors%20and%20Total%20Blood%20Donations.csv"
      },
      "transform": [
        {
          "filter": "datum.Year == Year"
        },
        {
          "lookup": "State",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/yeongshanyuan/FIT3179/refs/heads/main/Assignment%202/Cleaned%20Datasets/Malaysia%20States%20Map.json",
              "format": {
                "type": "topojson",
                "feature": "ne_10m_admin_1_states_provinces"
              }
            },
            "key": "properties.name"
          },
          "as": "geo"
        },
        {
          "calculate": "datum['Total New Donors'] != -1 ? datum['Total New Donors'] / datum['Total Blood Donations'] : -1",
          "as": "Proportion"
        },
        {
          "filter": "datum.Proportion != -1"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 0.5
      },
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {
          "field": "Proportion",
          "type": "quantitative",
          "scale": {
            "type": "log",
            "scheme": "reds"
          },
          "legend": {
            "title": "Proportion of New Donors in Total Blood Donations",
            "orient": "bottom",
            "format": ".0%",
            "direction": "horizontal",
            "titleLimit": 0
          }
        },
        "tooltip": [
          {
            "field": "State",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "Total New Donors",
            "type": "quantitative"
          },
          {
            "field": "Total Blood Donations",
            "type": "quantitative"
          },
          {
            "field": "Proportion",
            "type": "quantitative",
            "format": ".2f",
            "title": "Proportion"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/yeongshanyuan/FIT3179/refs/heads/main/Assignment%202/Cleaned%20Datasets/New%20Donors%20and%20Total%20Blood%20Donations.csv"
      },
      "transform": [
        {
          "filter": "datum.Year == Year"
        },
        {
          "lookup": "State",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/yeongshanyuan/FIT3179/refs/heads/main/Assignment%202/Cleaned%20Datasets/Malaysia%20States%20Map.json",
              "format": {
                "type": "topojson",
                "feature": "ne_10m_admin_1_states_provinces"
              }
            },
            "key": "properties.name"
          },
          "as": "geo"
        },
        {
          "filter": "datum['Total New Donors'] == -1"
        },
        {
          "calculate": "'Non Available Data for ' + datum.State",
          "as": "Invalid Description"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgrey",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "tooltip": {
          "field": "Invalid Description",
          "type": "nominal"
        }
      }
    }
  ]
}