{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 500,
    "title": "Proportion of New Donors in Total Blood Donations, Malaysia",
    "params": [
        {
            "name": "Year",
            "value": 2024,
            "bind": {
                "input": "range",
                "min": 2010,
                "max": 2024,
                "step": 1,
                "name": "Year: "
            }
        }
    ],
    "projection": {
        "type": "mercator",
        "center": [
            110,
            4
        ],
        "scale": 2600
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/yeongshanyuan/FIT3179/refs/heads/main/Week%2010%20Homework/Cleaned%20Datasets/Malaysia%20States.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_20"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "lightgray",
                "strokeWidth": 0.5
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/yeongshanyuan/FIT3179/refs/heads/main/Assignment%202/Cleaned%20Datasets/New%20Donors%20and%20Total%20Blood%20Donations.csv"
            },
            "transform": [
                {
                    "filter": "datum.Year == Year"
                },
                {
                    "calculate": "datum.State",
                    "as": "StateName"
                },
                {
                    "lookup": "StateName",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/yeongshanyuan/FIT3179/refs/heads/main/Week%2010%20Homework/Cleaned%20Datasets/Malaysia%20States.json",
                            "format": {
                                "type": "topojson",
                                "feature": "gadm41_MYS_1"
                            }
                        },
                        "key": "properties.NAME_1"
                    },
                    "as": "geo"
                },
                {
                    "calculate": "datum['Total New Donors'] != -1 ? datum['Total New Donors'] / datum['Total Blood Donations'] : -1",
                    "as": "Proportion"
                },
                {
                    "calculate": "datum.State == 'NegeriSembilan' ? 'Negeri Sembilan' : datum.State == 'PulauPinang' ? 'Pulau Pinang' : datum.State == 'Trengganu' ? 'Terengganu' : datum.State == 'KualaLumpur' ? 'Kuala Lumpur' : datum.State",
                    "as": "Display State"
                },
                {
                    "filter": "datum.Proportion != -1"
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "white",
                "strokeWidth": 0.5
            },
            "encoding": {
                "shape": {
                    "field": "geo",
                    "type": "geojson"
                },
                "color": {
                    "field": "Proportion",
                    "type": "quantitative",
                    "scale": {
                        "type": "log",
                        "scheme": "reds"
                    },
                    "legend": {
                        "title": "Proportion of New Donors in Total Blood Donations",
                        "orient": "bottom",
                        "format": ".0%",  
                        "direction": "horizontal",
                        "titleLimit": 0
                    }
                },
                "tooltip": [
                    {
                        "field": "Display State",
                        "type": "nominal",
                        "title": "State"
                    },
                    {
                        "field": "Total New Donors",
                        "type": "quantitative",
                        "title": "Total New Donors"
                    },
                    {
                        "field": "Total Blood Donations",
                        "type": "quantitative",
                        "title": "Total Blood Donations"
                    },
                    {
                        "field": "Proportion",
                        "type": "quantitative",
                        "format": ".2f",
                        "title": "Proportion of New Donors in Total Blood Donations"
                    }
                ]
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/yeongshanyuan/FIT3179/refs/heads/main/Assignment%202/Cleaned%20Datasets/New%20Donors%20and%20Total%20Blood%20Donations.csv"
            },
            "transform": [
                {
                    "filter": "datum.Year == Year"
                },
                {
                    "lookup": "State",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/yeongshanyuan/FIT3179/refs/heads/main/Week%209%20Homework/Cleaned%20Datasets/Malaysia%20States.json",
                            "format": {
                                "type": "topojson",
                                "feature": "gadm41_MYS_1"
                            }
                        },
                        "key": "properties.NAME_1"
                    },
                    "as": "geo"
                },
                {
                    "filter": "datum['Total New Donors'] == -1"
                },
                {
                    "calculate": "'Non Available Data for ' + datum.State",
                    "as": "Invalid Description"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "lightgrey",
                "stroke": "white",
                "strokeWidth": 1
            },
            "encoding": {
                "shape": {
                    "field": "geo",
                    "type": "geojson"
                },
                "tooltip": {
                    "field": "Invalid Description",
                    "type": "nominal"
                }
            }
        }
    ]
}