{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Daily Blood Donations by Blood Group",
    "data": {
        "url": "https://raw.githubusercontent.com/yeongshanyuan/FIT3179/refs/heads/main/Assignment%202/Cleaned%20Datasets/Daily%20Blood%20Donations%20by%20Blood%20Group.csv"
    },
    "params": [
        {
            "name": "Year",
            "value": 2024,
            "bind": {
                "input": "range",
                "min": 2010,
                "max": 2024,
                "step": 1,
                "name": "Select Year: "
            }
        }
    ],
    "vconcat": [
        {
            "width": 1000,
            "height": 20,
            "data": {
                "values": [
                    {
                        "text": "Sundays (red dashed lines) show peak donations consistently throughout the year"
                    }
                ]
            },
            "mark": {
                "type": "text",
                "align": "center",
                "color": "#b40a0a",
                "fontSize": 12
            },
            "encoding": {
                "text": {
                    "field": "text",
                    "type": "nominal"
                }
            }
        },
        {
            "width": 1000,
            "height": 500,
            "transform": [
                {
                    "filter": "year(datum.Date) == Year"
                }
            ],
            "layer": [
                {
                    "mark": "area",
                    "encoding": {
                        "x": {
                            "field": "Date",
                            "timeUnit": "yearmonthdate",
                            "scale": {
                                "domain": {
                                    "param": "time_brush"
                                }
                            },
                            "axis": {
                                "title": "",
                                "grid": false,
                                "tickCount": 5,
                                "format": "%b %d"
                            }
                        },
                        "y": {
                            "aggregate": "sum",
                            "field": "Donations",
                            "title": "Number of Donations"
                        },
                        "color": {
                            "field": "Blood Type",
                            "type": "nominal",
                            "title": "Blood Type",
                            "scale": {
                                "scheme": "tableau20"
                            },
                            "legend": {
                                "orient": "bottom",
                                "direction": "horizontal"
                            }
                        },
                        "tooltip": [
                            {
                                "field": "Date",
                                "type": "temporal",
                                "title": "Date",
                                "format": "%B %d, %Y"
                            },
                            {
                                "field": "Blood Type",
                                "type": "nominal",
                                "title": "Blood Type"
                            },
                            {
                                "aggregate": "sum",
                                "field": "Donations",
                                "type": "quantitative",
                                "title": "Total Donations",
                                "format": ","
                            }
                        ]
                    }
                },
                {
                    "transform": [
                        {
                            "filter": "day(datum.Date) == 0"
                        }
                    ],
                    "mark": {
                        "type": "rule",
                        "color": "#b40a0a",
                        "strokeWidth": 2,
                        "strokeDash": [
                            5,
                            5
                        ]
                    },
                    "encoding": {
                        "x": {
                            "field": "Date",
                            "timeUnit": "yearmonthdate",
                            "type": "temporal",
                            "scale": {
                                "domain": {
                                    "param": "time_brush"
                                }
                            }
                        },
                        "tooltip": [
                            {
                                "field": "Date",
                                "type": "temporal",
                                "title": "Sunday",
                                "format": "%B %d, %Y"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "width": 1000,
            "height": 200,
            "transform": [
                {
                    "filter": "year(datum.Date) == Year"
                }
            ],
            "mark": "line",
            "params": [
                {
                    "name": "time_brush",
                    "value": {
                        "x": [
                            {
                                "year": 2024,
                                "month": 12,
                                "date": 1
                            },
                            {
                                "year": 2024,
                                "month": 12,
                                "date": 31
                            }
                        ]
                    },
                    "select": {
                        "type": "interval",
                        "encodings": [
                            "x"
                        ]
                    }
                }
            ],
            "encoding": {
                "x": {
                    "field": "Date",
                    "timeUnit": "yearmonthdate",
                    "axis": {
                        "title": "",
                        "format": "%b",
                        "grid": false
                    }
                },
                "y": {
                    "aggregate": "sum",
                    "field": "Donations",
                    "axis": {
                        "tickCount": 3,
                        "grid": false
                    },
                    "title": "Total Donations"
                }
            }
        }
    ],
    "config": {
        "view": {
            "stroke": "transparent"
        },
        "axis": {
            "domain": false,
            "ticks": false,
            "grid": false
        }
    }
}